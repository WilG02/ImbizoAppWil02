<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E8DF"
    tools:context=".About">

    <ImageView
        android:id="@+id/img_returnFromAbout"
        android:layout_width="50dp"
        android:layout_height="36dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_back" />

    <TextView
        android:id="@+id/txt_aboutHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:shadowDx="5"
        android:shadowDy="4"
        android:shadowRadius="5"
        android:text="About"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#7D7F34"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.456"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/txt_aboutInformation"
        android:layout_width="359dp"
        android:layout_height="509dp"
        android:gravity="center"
        android:text="Currently there is a major percentage of South Africa’s youth who are  unemployed because of the lack of basic entrepreneurial skills. Imbizo will provide free education and training for SA’s youth to obtain the necessary skills to acquire jobs. It will be able to enhance an individual’s confidence so that they can excel and tackle anything they can put their mind to do.It is there to be able to develop a person as a whole. There is a category list within the app which involves a variety of information in order to uplift and enhance a young person’s self-esteem."
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.436" />

</androidx.constraintlayout.widget.ConstraintLayout>